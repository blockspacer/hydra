<?xml version="1.0"?>

<clients>
	<client type="VRPN" host="localhost" >
		<tracker name="glasses">
			<transformation>
				<vector x="0" y="1.5" z="0" />
			</transformation>
			<sensor num="0">
				<trigger type="VRPN" name="glassesTrigger" />
				<default>
					<position x="0" y="1.5" z="0"/>
					<orientation x="0" y="0" z="0" w="1"/>
				</default>
			</sensor>
		</tracker>
		<tracker name="fingerpori">
			<sensor num="0">
				<trigger type="VRPN" name="fingerTrigger" />
			</sensor>
		</tracker>
	</client>
	<client type="VRPN" host="localhost" port="3883">
		<tracker name="wand">
			<sensor num="0">
				<trigger type="VRPN" name="wand" />
			</sensor>
		</tracker>
	</client>
</clients>
