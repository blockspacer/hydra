<?xml version="1.0"?>

<!--
Joonatan Kuosa <joonatan.kuosa@tut.fi>
2010-11

Test configuration used for development. Contains almost all the tokens
and usable values for them.
Doesn't contain the specification. Have a look at config/env.xml for that.
-->
<env_config>

	<tracking>
		<file use="true">glasses.trc</file>
	</tracking>

	<!-- Set around which axes the camera is allowed to rotate around
	Defaults to all true.
	Only value "false" will set the axis out of use at the moment.

	Be vary of these as they affect how the scene looks but not the
	SceneNodes, so if the scene node is in some obscure rotation but these
	are set to false you might not be moving to the direction you think the
	camera is pointing at.
	-->
	<camera_rotations x="true" y="true" z="true" />

	<!-- Walls are used based on the name
	if no named walls are in eqc file, then the first wall is used.
	Useful in single channel systems.

	Can contain definitions that are not in use.
	-->
	<walls>
		<!-- 3-wall cluster config
		Used in tampere laboratory
		The real y coordinate of the screens are 0.34 for the bottom
		and 2.34 top. Trying to get a better view to downwards.
		-->
		<wall name="front">
			<bottom_left x="-1.33" y="0.36" z="-1.33" />
			<bottom_right x="1.33" y="0.36" z="-1.33" />
			<top_left x="-1.33" y="2.36" z="-1.33" />
		</wall>
		<wall name="left">
			<bottom_left x="-1.33" y="0.36" z="1.33" />
			<bottom_right x="-1.33" y="0.36" z="-1.33" />
			<top_left x="-1.33" y="2.36" z="1.33" />
		</wall>

		<wall name="right">
			<bottom_left x="1.33" y="0.36" z="-1.33" />
			<bottom_right x="1.33" y="0.36" z="1.33" />
			<top_left x="1.33" y="2.36" z="-1.33" />
		</wall>
	</walls>

	<!-- trying to enable or disable stereo
	value boolean: enable (ON, TRUE, 1), disable (OFF, FALSE, 1)
	default value: disabled
	-->
	<stereo>ON</stereo>

	<!-- trying to enable or disable NVidia swap sync
	value boolean: enable (ON, TRUE, 1), disable (OFF, FALSE, 1)
	default value: disabled
	-->
	<nv_swap_sync>ON</nv_swap_sync>

	<!-- Inter pupilar distance in meters.
	Good value is 0.065, but your milage may vary.
	Defaults to 0 even if stereo is enabled.
	-->
	<ipd>0.055</ipd>

	<server port="4699" hostname=""/>

	<master name="front">
		<!-- Windows are used based on the name
		If there is no named windows in the eqc file, then the first Window
		is used.
		Useful in single window systems.
		-->
		<windows>
			<window name="window-front" w="1024" h="768" x="0" y="0">
				<channel name="front">
					<wall>front</wall>
				</channel>
			</window>
		</windows>
	</master>
	<slave name="right">
		<windows>
			<window name="window-right" w="1024" h="768" x="1024" y="0">
				<channel name="right">
					<wall>right</wall>
				</channel>
			</window>
		</windows>
	</slave>
	<slave name="left">
		<windows>
			<window name="window-left" w="1024" h="768" x="-1024" y="0">
				<channel name="left">
					<wall>left</wall>
				</channel>
			</window>
		</windows>
	</slave>

</env_config>
