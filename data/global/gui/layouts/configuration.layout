<?xml version="1.0" ?>
<GUILayout>

<Window Type="DefaultGUISheet" Name="configuration">
	<Property Name="Text" Value="Configuration" />
	<Property Name="UnifiedMaxSize" Value="{{1,0},{1,0}}" />
	<Property Name="UnifiedSize" Value="{{1.0,0},{1.0,0}}" />
	<Property Name="UnifiedPosition" Value="{{0.0,0},{0.0,0}}" />
	<Property Name="Alpha" Value="0.4" />

	<Window Type="TaharezLook/Menubar" Name="configuration/menubar" >
		<Property Name="Text" Value="File" />
		<Property Name="UnifiedMaxSize" Value="{{1,0},{1,0}}" />
		<Property Name="UnifiedAreaRect" Value="{{0,0},{0,0},{1.0,0},{0.05,0}}" />
	</Window>

	<Window Type="TaharezLook/Checkbox" Name="configuration/shadows" >
		<Property Name="Text" Value="Shadows" />
		<Property Name="UnifiedMaxSize" Value="{{1,0},{1,0}}" />
		<Property Name="UnifiedSize" Value="{{0.4,0},{0.05,0}}" />
		<Property Name="UnifiedPosition" Value="{{0.03,0},{0.1,0}}" />
	</Window>
	<Window Type="TaharezLook/Checkbox" Name="configuration/showAxes" >
		<Property Name="Text" Value="Show Axes" />
		<Property Name="Selected" Value="False" />
		<Property Name="UnifiedMaxSize" Value="{{1,0},{1,0}}" />
		<Property Name="UnifiedSize" Value="{{0.4,0},{0.05,0}}" />
		<Property Name="UnifiedPosition" Value="{{0.03,0},{0.15,0}}" />
		<Property Name="Tooltip" Value="Show or hide object axes." />
	</Window>
	<Window Type="TaharezLook/Checkbox" Name="configuration/showNames" >
		<Property Name="Text" Value="Show Names" />
		<Property Name="UnifiedMaxSize" Value="{{1,0},{1,0}}" />
		<Property Name="UnifiedSize" Value="{{0.4,0},{0.05,0}}" />
		<Property Name="UnifiedPosition" Value="{{0.03,0},{0.2,0}}" />
	</Window>
	<Window Type="TaharezLook/Checkbox" Name="configuration/showJoints" >
		<Property Name="Text" Value="Show Joints" />
		<Property Name="UnifiedMaxSize" Value="{{1,0},{1,0}}" />
		<Property Name="UnifiedSize" Value="{{0.4,0},{0.05,0}}" />
		<Property Name="UnifiedPosition" Value="{{0.03,0},{0.25,0}}" />
	</Window>

	<!-- TODO add horizontal sliders for both ambient and GUI alpha -->
	<Window Type="TaharezLook/Slider" Name="configuration/ambient" >
		<Property Name="Text" Value="Ambient light" />
		<Property Name="CurrentValue" Value="0.1" />
		<Property Name="MaximumValue" Value="1" />
		<Property Name="ClickStepSize" Value="0.01" />
		<Property Name="UnifiedSize" Value="{{0.5,0},{0.003,0}}" />
		<Property Name="UnifiedPosition" Value="{{0.03,0},{0.35,0}}" />
	</Window>
	
	<Window Type="TaharezLook/Slider" Name="configuration/gui/alpha" >
		<Property Name="Text" Value="Ambient light" />
		<Property Name="CurrentValue" Value="0.1" />
		<Property Name="MaximumValue" Value="1" />
		<Property Name="ClickStepSize" Value="0.01" />
		<Property Name="UnifiedSize" Value="{{0.5,0},{0.003,0}}" />
		<Property Name="UnifiedPosition" Value="{{0.03,0},{0.40,0}}" />
	</Window>

	<Window Type="TaharezLook/ItemListbox" Name="configuration/skylist" >
		<Property Name="Text" Value="Sky" />
		<Property Name="UnifiedMaxSize" Value="{{1,0},{1,0}}" />
		<Property Name="UnifiedSize" Value="{{0.5,0},{0.15,0}}" />
		<Property Name="UnifiedPosition" Value="{{0.03,0},{0.45,0}}" />
		<Window Type="TaharezLook/ListboxItem" >
			<Property Name="Text" Value="Day sky" />
		</Window>
		<Window Type="TaharezLook/ListboxItem" >
			<Property Name="Text" Value="Stormy sky" />
		</Window>
		<Window Type="TaharezLook/ListboxItem" >
			<Property Name="Text" Value="Night sky" />
		</Window>
	</Window>

            
</Window>

</GUILayout>

